{% extends 'base.html.twig' %}

{% block body %}
{{ form_start(form) }}
    <h1>Register</h1>
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}
    <button type="submit">Register</button>
{{ form_end(form) }}
<a href="{{ path('app_login') }}">Sign in here</a>
{% endblock %}
