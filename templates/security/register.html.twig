{% extends 'base.html.twig' %}

{% block body %}
{{ form_start(form) }}
    <h1>Register</h1>
    <div class="form-row">
        <div class="form-group col-md-12">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'E-mail Address'} }) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'} }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
{{ form_end(form) }}
or <a href="{{ path('app_login') }}">Sign in here</a>
{% endblock %}
